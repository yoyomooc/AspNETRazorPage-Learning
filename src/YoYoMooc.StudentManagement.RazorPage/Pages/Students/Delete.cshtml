@page "{id}"
@model DeleteModel
@{
    ViewData["Title"] = "删除";
}

<h1>确认删除</h1>

<div class="alert alert-danger">
    <h5>确实要删除学生 - @Model.Student.Name  信息吗？</h5>
    <form method="post">
        <button type="submit" class="btn btn-danger">确认</button>
        <a asp-page="/Students/Index" class="btn btn-primary">取消</a>
    </form>
</div>